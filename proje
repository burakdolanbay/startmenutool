from tkinter import *
import os

pencere=Tk()
pencere.title("BAŞLAT MENÜSÜ")
pencere.wm_iconbitmap("hourglass")
#pencere.geometry("400x300")
#pencere.state("iconic")

#kapatma...

def kapatma():
    os.system("shutdown -h now")

btn_kapat = Button(text="kapat",
                   command=kapatma)
btn_kapat.pack(side="right")
btn_kapat.pack(anchor="sw")

#reset

def resetle():
    os.system("shutdown -r now")

btn_reset = Button(text="reset",
                   command=resetle)
btn_reset.pack(side="right")
btn_reset.pack(anchor="sw")


#Bilgisayar
def disk_ac():
    import  os
    os.system("nautilus /")

btn_disk = Button(text="BİLGİSAYARIM",
                   command=disk_ac)
btn_disk.pack(side="left")
btn_disk.pack(anchor="sw")

#DENETİM MASASI AÇMA
def calistir():
    import  os
    os.system("unity-control-center")

btn_denetim = Button(text="Denetim Masası",
                   command=calistir)
btn_denetim.pack(side="left")

