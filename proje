#Arama
def search():
    veri=entry.get()
    print(veri)

entry = Entry()
entry.pack(side="left")
entry.pack(anchor="sw")


btn_ara = Button(text="ARA",
                   command=search)
btn_ara.pack(side="left")
btn_ara.pack(anchor="sw")
mainloop()
